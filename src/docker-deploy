    enableContainer 'joomla'
    ;;
  "4)")
    disableContainer 'joomla'
    ;;
  "5)")
    deleteContainer 'joomla'
    ;;
  "6)")
    downContainers 'joomla'
    ;;
  "7)")
    upContainers 'joomla'
